{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,  
    "baseUrl": ".",
    "paths": {
      "App/*": ["src/app/*"],
      "Utils/*": ["src/utils/*"]
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "test"]
}
